{
  "manifest_version": 3,
  "name": "Direct CSS Editor",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_icon": "css.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["*://*/*"]
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": ["sidePanel"]
}
